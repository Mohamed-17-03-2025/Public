<Window x:Class="PDF_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Reader" Height="600" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Button Grid.Row="0" Content="Open PDF" Click="OpenPDF_Click" Margin="10"/>
		<Image Grid.Row="1" x:Name="PDFImage" Stretch="Uniform" Margin="10"/>
	</Grid>
</Window>
